{
   "compilerOptions": {
     "lib": ["es5", "es6"],
     "target": "esnext",
     "module": "ESNext",
     "rootDir": "src",
     "moduleResolution": "Node",
     "outDir": "./build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "esModuleInterop": true,
     "resolveJsonModule": true,
     "sourceMap": true,
     "strict": false
   },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules", "dist"],
   "ts-node": {
     "esm": true,
     "compiler": "typescript",
     "experimentalSpecifierResolution": "node"
   }
 }
 